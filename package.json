{
  "name": "adapter-gfw-microservice",
  "version": "0.0.1",
  "description": "Global Forest Watch Adapter",
  "repository": "https://github.com/resource-watch/adapter-gfw",
  "main": "index.js",
  "scripts": {
    "coverage": "nyc ts-mocha -b --project tsconfig.json -r tsconfig-paths/register --timeout 20000 'app/test/**/*.ts' --exit",
    "test": "ts-mocha -b --project tsconfig.json -r tsconfig-paths/register --timeout 20000 'app/test/**/*.ts' --exit",
    "start": "ts-node --files --project tsconfig.json -r tsconfig-paths/register app/src/index.ts",
    "watch": "ts-node-dev --respawn --transpile-only --files --project tsconfig.json -r tsconfig-paths/register app/src/index.ts",
    "lint": "eslint . --ext .ts"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "adapter-gfw",
    "koa2",
    "rw",
    "nodejs"
  ],
  "author": {
    "name": "World Resources Institute",
    "url": "https://www.wri.org/"
  },
  "engines": {
    "node": "~16"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/config": "^0.0.37",
    "@types/koa": "^2.11.6",
    "@types/koa-logger": "^3.1.1",
    "@types/mocha": "^9.0.0",
    "@types/request": "^2.48.7",
    "@types/sleep": "^0.0.8",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "axios-mock-adapter": "^1.20.0",
    "chai": "^4.2.0",
    "chai-datetime": "^1.5.0",
    "chai-http": "^4.3.0",
    "eslint": "^8.4.1",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-plugin-mocha": "^10.0.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "mocha": "^7.1.1",
    "nock": "^12.0.3",
    "nyc": "^15.0.0",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0"
  },
  "dependencies": {
    "@types/koa-router": "^7.4.4",
    "axios": "^0.24.0",
    "bunyan": "^1.8.5",
    "config": "^1.21.0",
    "koa": "^2.0.0",
    "koa-body": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-logger": "^2.0.0",
    "koa-mount": "^2.0.0",
    "koa-router": "^7.0.1",
    "koa-simple-healthcheck": "^0.0.1",
    "koa-validate": "^1.0.7",
    "mongoose": "^5.9.15",
    "mongoose-paginate": "^5.0.3",
    "rw-api-microservice-node": "^4.0.5",
    "typescript": "^4.5.2"
  }
}
